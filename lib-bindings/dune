(library
 (name        hacl_star)
 (public_name hacl-star)
 (libraries hacl-star-raw
            zarith)
 (preprocessor_deps config.h)
 (preprocess (action (run %{bin:cppo} %{input-file})))
 (flags (:standard -warn-error -3)))

